// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Project {
  id               Int                    @id @default(autoincrement())
  name             String
  startIntervals   ProjectStartInterval[]
  ProjectResources ProjectResource[]
}

model ProjectStartInterval {
  id        Int      @id @default(autoincrement())
  Project   Project? @relation(fields: [projectId], references: [id])
  projectId Int?
  startDate DateTime @db.Timestamp(3)
  endDate   DateTime @db.Timestamp(3)
}

model ProjectResource {
  id             Int                     @id @default(autoincrement())
  Project        Project?                @relation(fields: [projectId], references: [id])
  projectId      Int?
  Resource       Resource?               @relation(fields: [resourceId], references: [id])
  resourceId     Int?
  startIntervals ResourceStartInterval[]
}

model Resource {
  id              Int               @id @default(autoincrement())
  name            String
  ProjectResource ProjectResource[]
}

model ResourceStartInterval {
  id                Int              @id @default(autoincrement())
  ProjectResource   ProjectResource? @relation(fields: [projectResourceId], references: [id])
  projectResourceId Int?
  startDate         DateTime         @db.Timestamp(3)
  endDate           DateTime         @db.Timestamp(3)
}
